@{
}

@model List<SampleCrudApplication.Models.Entities.Movie>

<h1>Movies</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Genre</th>
            <th>Rating</th>
            <th>DirectorName</th>
            <th>ReleaseDate</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Id</td>
                <td>@movie.Title</td>
                <td>@movie.Genre</td>
                <td>@movie.Rating</td>
                <td>@movie.DirectorName</td>
                <td>@movie.ReleaseDate</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Movies" asp-action="Edit" asp-route-id="@movie.Id">Edit</a></td>
            </tr>
        }
    </tbody>

</table>
